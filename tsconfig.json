{
    "compilerOptions": {
        "incremental": true,
        "strict": true,
        "module": "CommonJS",
        "tsBuildInfoFile": "./dist/buildFile.tsbuildinfo",
        "skipLibCheck": true,
        "newLine": "lf",
        "experimentalDecorators": true,
        "target": "ES2020",
        "outDir": "./dist",
        "moduleResolution": "Node",
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "listEmittedFiles": true
    },
    "exclude": ["./script"]
}
